<Window x:Class="CinemaTicketApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cinema Ticket Booking" Height="350" Width="400">
    <Grid Margin="10">
        <StackPanel>
           <TextBlock Text="Select Movie:" FontSize="16" Margin="0,0,0,10"/>
           <ComboBox x:Name="MovieComboBox" FontSize="14" Margin="0,0,0,10">
                <ComboBoxItem>Movie 1</ComboBoxItem>
                <ComboBoxItem>Movie 2</ComboBoxItem>
                <ComboBoxItem>Movie 3</ComboBoxItem>
           </ComboBox>
           <TextBlock Text="Number of Tickets:" FontSize="16" Margin="0,0,0,10"/>
           <TextBox x:Name="TicketTextBox" FontSize="14" Margin="0,0,0,10"/>
           <Button Content="Calculate Total" FontSize="16" Click="CalculateTotal_Click" Margin="0,10,0,10"/>
        </StackPanel>
    </Grid>
</Window>
